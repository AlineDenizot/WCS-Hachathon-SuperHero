{% block header %}
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">DelivHeroes</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item profile">
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('logout') }}"> Se déconnecter</a>
                    {% else %}
                        <button type="button" class="button" data-toggle="modal" data-target="#connection">
                            Connexion
                        </button>
                        <div class="modal fade" id="connection" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered d-flex" style="max-width:20%;" role="document">
                                <div class="modal-content row col-11 p-0 m-0">
                                    <div class="modal-body d-flex flex-column m-0 col-lg-12">
                                        <h5 class="text-center" style="color:#F27E55; font-weight: bold"> Accèdez rapidement à votre espace </h5>
                                        {% include ('_formConnection.html.twig') %}
                                        <a href="{{ path('register') }}" class="align-self-center pt-2" style="color:#F27E55; font-weight: bold"> Pas encore de compte ?</a>

                                    </div>
                                </div>
                                <div class="close col-lg-1">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </li>
                {%  if app.user %}
                <li class="nav-item profile">
                    <a class="nav-link" href="{{ path('profil')}} ">Mon profil</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}
